#!/usr/bin/env node

const {HUB_URL, ACTOR_KEY} = process.env

if (!HUB_URL || !ACTOR_KEY) {
  console.error('you need HUB_URL and ACTOR_KEY')
  process.exit(1)
}

const ACTOR_URL = `${HUB_URL}/actors`

const co = require('co')
const sugoActor = require('sugo-actor')
const noopModule = require('sugo-module-noop')

co(function * () {
  let actor = sugoActor(ACTOR_URL, {
    key: ACTOR_KEY,
    modules: {
      noop: noopModule({})
    }
  })
  yield actor.connect()
}).catch((err) => console.error(err))
