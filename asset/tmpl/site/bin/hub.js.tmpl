#!/usr/bin/env node

const sugoHub = require('sugo-hub')
const co = require('co')

const env = require('../env')

co(function * () {
  let server = sugoHub({
    public: [ 'public' ],
    middlewares: [],
    storage: {
      redis: {
        url: env.redis.URL,
        db: 1
      }
    }
  })
  server.listen(env.port.SERVER)
}).catch(err => console.error(err))
